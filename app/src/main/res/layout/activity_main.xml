<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Band_title"
        android:id="@+id/band_title"
        android:layout_marginTop="228dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="98dp" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/band1"
        android:layout_alignTop="@+id/band_title"
        android:layout_toEndOf="@+id/band_title"
        android:layout_marginStart="73dp" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/band2"
        android:layout_alignTop="@+id/band_title"
        android:layout_toEndOf="@+id/band1"
        android:layout_marginStart="73dp"/>

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/band3"
        android:layout_alignTop="@+id/band_title"
        android:layout_toEndOf="@+id/band2"
        android:layout_marginStart="73dp"/>

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/band4"
        android:layout_alignTop="@+id/band_title"
        android:layout_toEndOf="@+id/band3"
        android:layout_marginStart="73dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_title"
        android:id="@+id/button"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Answer_text"
        android:id="@+id/answer"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_marginBottom="77dp" />

</RelativeLayout>
