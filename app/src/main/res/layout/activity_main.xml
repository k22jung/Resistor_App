<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Band_title"
        android:id="@+id/band_title"
        android:layout_marginTop="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="98dp" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/band1"
        android:layout_alignTop="@+id/band_title"
        android:layout_toEndOf="@+id/band_title"
        android:layout_marginStart="73dp" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/band2"
        android:layout_alignTop="@+id/band_title"
        android:layout_toEndOf="@+id/band1"
        android:layout_marginStart="73dp"/>

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/band3"
        android:layout_alignTop="@+id/band_title"
        android:layout_toEndOf="@+id/band2"
        android:layout_marginStart="73dp"/>

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/band4"
        android:layout_alignTop="@+id/band_title"
        android:layout_toEndOf="@+id/band3"
        android:layout_marginStart="73dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_title"
        android:id="@+id/button"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Answer_text"
        android:id="@+id/answer"
        android:layout_above="@+id/button"
        android:layout_marginBottom="130dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resistor_image"
        android:background="@drawable/resistor"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/band4" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="58dp"
        android:id="@+id/color1"
        android:layout_marginBottom="85dp"
        android:layout_marginEnd="9dp"
        android:layout_alignBottom="@+id/resistor_image"
        android:layout_toStartOf="@+id/button" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="58dp"
        android:id="@+id/color2"
        android:layout_alignTop="@+id/color1"
        android:layout_alignStart="@+id/button"
        android:layout_marginStart="4dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="58dp"
        android:id="@+id/color3"
        android:layout_alignTop="@+id/color1"
        android:layout_alignStart="@+id/button"
        android:layout_marginStart="35dp"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="58dp"
        android:id="@+id/color4"
        android:layout_alignTop="@+id/color1"
        android:layout_alignStart="@+id/button"
        android:layout_marginStart="65dp"/>

</RelativeLayout>
